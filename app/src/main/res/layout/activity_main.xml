<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Решение математических задач"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LinearLayoutOne"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" >

        <TextView
            android:id="@+id/equationOne"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:gravity="end"
            android:padding="10dp"
            android:text="00 + 00 ="
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayoutOne"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/solvingOne"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#101010"
            android:ems="10"
            android:gravity="center"
            android:hint="Решение"
            android:padding="10sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutTwo"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayoutOne" >

        <TextView
            android:id="@+id/equationTwo"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:gravity="end"
            android:padding="10dp"
            android:text="00 + 00 ="
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayoutTwo"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/solvingTwo"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#101010"
            android:ems="10"
            android:gravity="center"
            android:hint="Решение"
            android:padding="10sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/equationTwo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutThree"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayoutTwo" >

        <TextView
            android:id="@+id/equationThree"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:gravity="end"
            android:padding="10dp"
            android:text="00 + 00 ="
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayoutThree"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/solvingThree"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#101010"
            android:ems="10"
            android:gravity="center"
            android:hint="Решение"
            android:padding="10sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/equationThree" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="Обновить задачи"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayoutThree" />


</androidx.constraintlayout.widget.ConstraintLayout>